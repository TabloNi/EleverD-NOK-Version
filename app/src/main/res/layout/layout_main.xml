<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="84dp"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_constraintBottom_toTopOf="parent"
        android:layout_constraintLeft_toLeftOf="parent"
        android:layout_constraintRight_toRightOf="parent"
        android:fillViewport="true"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:scaleType="fitStart"
        android:src="@drawable/ic_user_icon"
        app:layout_constraintBottom_toTopOf="@id/drug_case"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ScrollView"
        android:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:id="@+id/drug_case"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:layout_constraintTop_toTopOf="@id/user_icon"
            android:layout_constraintBottom_toTopOf="parent"
            android:src="@drawable/ic_drug_case" />

</androidx.constraintlayout.widget.ConstraintLayout>